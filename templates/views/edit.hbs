<!-- edit.hbs -->
<h1>Edit Event</h1>
<form action="/admin/edit/confirmed/{{eventToUpdate._id}}?adminKey={{adminKey}}" method="post" enctype="multipart/form-data">
  <!-- Existing form fields for editing event details -->
  <label for="eventName">Event Name:</label>
  <input type="text" id="eventName" name="eventName" value="{{eventToUpdate.eventName}}" required>

  <label for="aboutEvent">About Event:</label>
  <textarea id="aboutEvent" name="aboutEvent" required>{{eventToUpdate.aboutEvent}}</textarea>

  <!-- Add input field for uploading an image -->
  <label for="eventImage">Event Image:</label>
  <input type="file" id="eventImage" name="eventImage">

  <button type="submit">Confirm Edit</button>
</form>
