<!-- edit.hbs -->
<h1>Edit Event</h1>
<form action="/edit/confirmed/{{eventToUpdate._id}}?adminKey={{adminKey}}" method="post" enctype="multipart/form-data">
  <!-- Existing form fields for editing event details -->
  <label for="eventName">Event Name:</label>
  <input type="text" id="eventName" name="eventName" value="{{eventToUpdate.eventName}}" required>

  <label for="shortDescription">Short Description:</label>
  <textarea id="shortDescription" name="shortDescription" required>{{eventToUpdate.shortDescription}}</textarea>

  <label for="longDescription">Long Description:</label>
  <textarea id="longDescription" name="longDescription" required>{{eventToUpdate.longDescription}}</textarea>

  <label for="eventImage">Event Image:</label>
  <input type="file" id="eventImage" name="eventImage">

  <button type="submit">Confirm Edit</button>
</form>
  